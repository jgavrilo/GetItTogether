{
    "manifest_version": 3,
    "name": "Work-Mode-Timer",
    "version": "1.0",
    "description": "A simple work and break timer for Chrome.",
    "permissions": ["alarms", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
      "default_width": 300,
      "default_height": 200
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
    
 }
 